@using System.Security.Claims
@model Domain.Entity.Blog

@{
    ViewData["Title"] = "CreateBlog";
}

<h1 class="text-xl mt-12 font-bold mb-4">Create Blog</h1>
<form asp-action="CreateBlog" enctype="multipart/form-data" class="max-w-xl mx-auto">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-4">
        <label asp-for="BlogTitle" class="block text-gray-700 font-bold mb-2">Blog Title</label>
        <input asp-for="BlogTitle" id="title" name="BlogTitle" class="w-full px-3 py-2 border rounded-md focus:outline-none focus:border-blue-500" placeholder="Enter blog title">
        <span asp-validation-for="BlogTitle" class="text-danger"></span>
    </div>
    <div class="mb-4">
        <label asp-for="BlogContent" class="block text-gray-700 font-bold mb-2">Blog Content</label>
        <textarea asp-for="BlogContent" id="content" name="BlogContent" rows="5" class="w-full px-3 py-2 border rounded-md focus:outline-none focus:border-blue-500" placeholder="Enter blog content"></textarea>
        <span asp-validation-for="BlogContent" class="text-danger"></span>
    </div>
    <div class="mb-4">
        <label for="image" class="block text-gray-700 font-bold mb-2">Image</label>
        <input type="file" id="image" name="ImageFile" accept="image/*" class="w-full px-3 py-2 border rounded-md focus:outline-none focus:border-blue-500">
        <span asp-validation-for="ImageName" class="text-danger"></span>
    </div>

    <div class="mb-4">
        <label asp-for="User" class="control-label" hidden>User:</label>
        <input asp-for="User" class="form-control" name="User" value="@User.FindFirstValue(ClaimTypes.NameIdentifier)" hidden />
        <span asp-validation-for="User" class="text-danger"></span>
    </div>

    <div class="flex justify-end">
        <button type="submit" class="bg-blue-700 text-white px-4 py-2 rounded-md hover:bg-blue-600">Add Blog</button>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
