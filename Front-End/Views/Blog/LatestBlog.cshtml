@model IEnumerable<Domain.Entity.Blog>


<section class="my-12">
    <h2 class="text-3xl font-bold mb-4">Ready to share your story?</h2>
    <p class="text-lg text-gray-700 mb-6">Start writing your next blog post and inspire others with your experiences and insights.</p>
    <a href="@Url.Action("CreateBlog")" class="bg-blue-700 text-white px-6 py-3 rounded-md hover:bg-blue-600">Create Blog Post</a>
</section>
<h1 class="text-2xl mt-12 font-bold mb-8">Latest Blog Posts</h1>
<!-- Grid for Blog Cards -->
<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
    <!-- Blog Card 1 -->
    @foreach (var blog in Model)
    {
        
        <div class="blog-card relative overflow-hidden bg-white shadow-lg rounded-lg h-96">
            <!-- Banner Image -->
            <a href="@Url.Action("BlogDetail", new { id = blog.Id })">
            <figure class="card-banner h-40 sm:h-48 md:h-56 lg:h-64">
                @if (!string.IsNullOrEmpty(blog.ImageName))
                {
                    <img src="~/Images/Blogs/@blog.ImageName" loading="lazy" alt="Blog Post Image" class="object-cover w-full h-full">
                }
                else
                {
                    <img src="~/Images/Blogs/default.png" loading="lazy" alt="Blog Post Image" class="object-cover w-full h-full">
                }
            </figure>
            <!-- Card Content -->
            <div class="p-6">
                <!-- Tags -->
            
                <!-- Title -->
                <h3 class="text-lg font-semibold mb-2">
                    <a href="blog_details.html" class="card-title hover:underline">
                        @blog.BlogTitle
                    </a>
                </h3>
                <!-- Text Content -->
                <div>
                    <p class="text-gray-600 text-sm">@Html.Raw(blog.BlogContent.Substring(0, Math.Min(blog.BlogContent.Length, 100)))</p>
                    <a href="@Url.Action("BlogDetail", new { id = blog.Id })" class="text-blue-700">Read more</a>
                </div>
            </div>
        </div>

       
    }
    </a>
    <a class="btn btn-primary">View More</a>
</div>

</div>
